<% provide :title, t(".log_in") %>

<section class="section-contact bg1-pattern p-t-90 p-b-113">
  <div class="container">
    <div class="t-center">
    <span class="tit2 t-center">
      <%= t "users.form.pato_restaurant" %>
    </span>

      <h3 class="tit3 t-center m-b-35 m-t-2">
        <%= t ".create_an_acount"%>
      </h3>
    </div>
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", value: "nvt94.ptit@gmail.com" %>

        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", value: "xxxxxx" %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span class="m-l-15"><%= t ".remember_me" %></span>
        <% end %>

        <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>

      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
      <p>Forgot
        password? <%= link_to "(forgot password)", new_password_reset_path %></p>
    </div>
  </div>
  </div>
</section>
