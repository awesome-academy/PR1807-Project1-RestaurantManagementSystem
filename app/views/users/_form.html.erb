<section class="section-contact bg1-pattern p-t-90 p-b-113">
  <div class="container">
    <div class="t-center">
      <span class="tit2 t-center">
        <%= t "shared.pato_restaurant" %>
      </span>

      <h3 class="tit3 t-center m-b-35 m-t-2">
        <%= t "shared.create_new_account" %>
      </h3>
    </div>

    <%= form_for @user, class: "wrap-form-reservation size22 m-l-r-auto" do |f| %>
      <div class="row">
        <div class="col-md-4">
          <%= f.label :name, value: t("shared.name") %>
          <%= f.text_field :name, class: "form-control", placeholder: t("shared.name"), value: "nastx" %>

          <%= f.label :email, value: t("shared.email") %>
          <%= f.text_field :email, class: "form-control", placeholder: t("shared.email"), value: "nvt94.ptit@gmail.com" %>

          <%= f.label :password, value: t(".password") %>
          <%= f.password_field :password, class: "form-control", placeholder: t(".password"), value: "xxxxxx" %>

          <%= f.label :password_confirmation, value: t(".password_confirmation") %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(".password_confirmation"), value: "xxxxxx" %>

          <!-- button submit -->
          <%= f.submit yield(:button_text), class: "btn btn-primary" %>
        </div>

        <div class="col-md-4">
          <%= f.label :phone_number, value: t("shared.phone_number") %>
          <%= f.text_field :phone_number, class: "form-control", placeholder: t("shared.phone_number"), value: "0987654321" %>

          <%= f.label :address, value: t(".address") %>
          <%= f.text_field :address, class: "form-control", placeholder: t(".address"), value: "ha noi city" %>

          <%= f.label :gender, value: t(".gender") %>
          <%= f.select :gender, [t(".male"), t(".female"), t(".other")], class: "form-control" %>

          <%= f.label :birth_date, value: t(".birth_date") %>
          <div class="wrap-inputdate pos-relative">
            <%= f.text_field :birth_date, class: "form-control", placeholder: t(".birth_date"), value: "17/05/1994" %>
            <i class="btn-calendar fa fa-calendar ab-r-m hov-pointer m-r-18" aria-hidden="true"></i>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
