<%= form_for @user, url: {controller: controller, action: action}, class: "wrap-form-reservation size22 m-l-r-auto" do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.label :name, value: t("shared.name") %>
      <%= f.text_field :name, class: "form-control", placeholder: t("shared.name") %>

      <%= f.label :email, value: t("shared.email") %>
      <%= f.text_field :email, class: "form-control", placeholder: t("shared.email") %>

      <%= f.label :password, value: t(".password") %>
      <%= f.password_field :password, class: "form-control", placeholder: t(".password") %>

      <%= f.label :password_confirmation, value: t(".password_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(".password_confirmation") %>

      <!-- button submit -->
      <%= f.submit yield(:button_text), class: "btn btn-primary m-t-15" %>
    </div>

    <div class="col-md-6">
      <%= f.label :phone_number, value: t("shared.phone_number") %>
      <%= f.text_field :phone_number, class: "form-control", placeholder: t("shared.phone_number") %>

      <%= f.label :address, value: t(".address") %>
      <%= f.text_field :address, class: "form-control", placeholder: t(".address") %>

      <%= f.label :gender, value: t(".gender") %>
      <%= f.select :gender, {t(".male") => "male", t(".female") => "female", t(".other") => "other"}, {}, {class: "form-control"} %>

      <%= f.label :birth_date, value: t(".birth_date") %>
      <div class="input-group date" id="datetimepicker" onclick="birth_date_picker()">
        <%= f.text_field :birth_date, class: "form-control", required: true,
            value: Date.today %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
  </div>
<% end %>
