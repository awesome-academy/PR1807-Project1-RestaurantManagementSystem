<header>
  <div class="wrap-menu-header gradient1 trans-0-4">
    <div class="container h-full">
      <div class="wrap_header trans-0-3">
        <div class="logo">
          <a href="index.html">
            <img src="<%= image_path "icons/logo.png" %>" alt="IMG-LOGO" data-logofixed="<%= image_path "icons/logo2.png" %>">
          </a>
        </div>
        <div class="wrap_menu p-l-45 p-l-0-xl">
          <nav class="menu">
            <ul class="main_menu">
              <li><%= link_to t("shared.home"), root_path %></li>
              <li><%= link_to t(".menu"), dishes_path %></li>
              <li><%= link_to t("shared.reservation"), new_reservation_path %></li>
              <li><%= link_to t(".about"), about_path %></li>
              <li><%= link_to t("shared.contact"), contact_path %></li>
              <% if logged_in? %>
                <li class="dropdown">
                  <button class="btn dropdown-toggle" data-toggle="dropdown" aria-expanded="false" target="#dropdown-1">
                    <span><%= current_user.name %></span>
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" id="dropdown-1">
                    <li><%= link_to t("shared.profile"), current_user %></li>
                    <li><%= link_to t("users.edit.change_profile"),
                        edit_user_path(current_user.id) %></li>
                    <li><%= link_to t("shared.logout"), logout_path, method: :delete %></li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to t("sessions.new.log_in"), login_path %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>
