<% provide :title, t(".contact") %>

<!-- Contact form -->
<section class="section-contact bg1-pattern p-t-90 p-b-113">
  <!-- Map -->
<!--  <div class="container">-->
<!--    <div class="map bo8 bo-rad-10 of-hidden">-->
<!--      <div class="contact-map size37" id="google_map" data-map-x="40.704644" data-map-y="-74.011987" data-pin="images/icons/icon-position-map.png" data-scrollwhell="0" data-draggable="1"></div>-->
<!--    </div>-->
<!--  </div>-->

  <div class="container">
    <h3 class="tit7 t-center p-b-62 p-t-105">
      <%= t ".send_us_a_message"%>
    </h3>

    <form class="wrap-form-reservation size22 m-l-r-auto">
      <div class="row">
        <div class="col-md-4">
          <!-- Name -->
          <span class="txt9">
            <%= t "shared.name" %>
          </span>
          <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
            <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" name="name" placeholder= <%= t "shared.name" %>>
          </div>
        </div>

        <div class="col-md-4">
          <!-- Email -->
          <span class="txt9">
            <%= t "shared.email"%>
          </span>

          <div class="wrap-inputemail size12 bo2 bo-rad-10 m-t-3 m-b-23">
            <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" name="email" placeholder=<%= t "shared.email" %>>
          </div>
        </div>

        <div class="col-md-4">
          <!-- Phone -->
          <span class="txt9">
            <%= t "shared.phone_number" %>
          </span>

          <div class="wrap-inputphone size12 bo2 bo-rad-10 m-t-3 m-b-23">
            <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" name="phone" placeholder=<%= t "shared.phone_number" %>>
          </div>
        </div>

        <div class="col-12">
          <!-- Message -->
          <span class="txt9">
            <%= t ".message" %>
          </span>
          <textarea class="bo-rad-10 size35 bo2 txt10 p-l-20 p-t-15 m-b-10 m-t-3" name="message" placeholder=<%= t ".message" %>></textarea>
        </div>
      </div>

      <div class="wrap-btn-booking flex-c-m m-t-13">
        <!-- Button3 -->
        <button type="submit" class="btn3 flex-c-m size36 txt11 trans-0-4">
          <%= t ".submit" %>
        </button>
      </div>
    </form>

    <div class="row p-t-135">
      <div class="col-sm-8 col-md-4 col-lg-4 m-l-r-auto p-t-30">
        <div class="dis-flex m-l-23">
          <div class="p-r-40 p-t-6">
            <img src="<%= image_path "icons/map-icon.png" %>" alt="IMG-ICON">
          </div>

          <div class="flex-col-l">
            <span class="txt5 p-b-10">
              <%= t ".location" %>
            </span>

            <span class="txt23 size38">
              <%= t "shared.restaurant_address" %>
            </span>
          </div>
        </div>
      </div>

      <div class="col-sm-8 col-md-3 col-lg-4 m-l-r-auto p-t-30">
        <div class="dis-flex m-l-23">
          <div class="p-r-40 p-t-6">
            <img src="<%= image_path "icons/phone-icon.png" %>" alt="IMG-ICON">
          </div>


          <div class="flex-col-l">
            <span class="txt5 p-b-10">
              <%= t ".call_us" %>
            </span>

            <span class="txt23 size38">
              (+1) 96 716 6879
            </span>
          </div>
        </div>
      </div>

      <div class="col-sm-8 col-md-5 col-lg-4 m-l-r-auto p-t-30">
        <div class="dis-flex m-l-23">
          <div class="p-r-40 p-t-6">
            <img src="<%= image_path "icons/clock-icon.png" %>" alt="IMG-ICON">
          </div>


          <div class="flex-col-l">
            <span class="txt5 p-b-10">
              <%= t ".opening_hours" %>
            </span>

            <span class="txt23 size38">
              09:30 AM â€“ 11:00 PM <br/><%= t "layouts.footer.every_day" %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
